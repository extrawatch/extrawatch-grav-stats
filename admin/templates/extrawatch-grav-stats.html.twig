{% extends 'partials/base.html.twig' %}

{% block content %}

    {% if config.plugins['extrawatch-grav-stats'].projectId is empty %}

        <div class="padding">
            <span style="color: red">No project ID specified in ExtraWatch plugin settings. No visits are being recorded. </span><br/>
            <br/>
            Please register, confirm your email, add new website and set project ID in <a href="./plugins/extrawatch-grav-stats">ExtraWatch plugin settings</a>.
            <br/>
            <br/>
        </div>
        <iframe src='https://app.extrawatch.com/#/' width='100%' height='100vh' style='min-height: 100vh; width:100%; overflow: hidden' scrolling='no' frameborder='0'></iframe>

    {% else %}

        <iframe src='https://app.extrawatch.com/' width='100%' height='100vh' style='min-height: 100vh; width:100%; overflow: hidden' scrolling='no' frameborder='0'></iframe>

    {% endif %}

{% endblock %}